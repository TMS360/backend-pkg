"""String comparison mode"""
enum QueryMode {
    """Case-sensitive (LIKE)"""
    default
    """Case-insensitive (ILIKE)"""
    insensitive
}

"""Sort direction"""
enum SortOrder {
    """Ascending"""
    asc
    """Descending"""
    desc
}

"""
String filter.

Examples:
- { equals: "John" }
- { contains: "john", mode: insensitive }
- { in: ["active", "pending"] }
- { startsWith: "admin@" }
- { isNull: true }
"""
input StringFilter {
    equals: String
    not: String
    in: [String!]
    notIn: [String!]
    contains: String
    startsWith: String
    endsWith: String
    like: String
    regex: String
    mode: QueryMode
    isNull: Boolean
}

"""
Integer filter.

Examples:
- { equals: 25 }
- { gte: 18, lte: 65 }
- { gt: 0 }
"""
input IntFilter {
    equals: Int
    not: Int
    in: [Int!]
    notIn: [Int!]
    lt: Int
    lte: Int
    gt: Int
    gte: Int
    isNull: Boolean
}

"""
Float filter.

Examples:
- { gte: 100.0, lte: 500.0 }
- { gt: 1000.0 }
"""
input FloatFilter {
    equals: Float
    not: Float
    in: [Float!]
    notIn: [Float!]
    lt: Float
    lte: Float
    gt: Float
    gte: Float
    isNull: Boolean
}

"""Boolean filter"""
input BoolFilter {
    equals: Boolean
    isNull: Boolean
}

"""
DateTime filter (ISO 8601).

Examples:
- { gte: "2024-01-01T00:00:00Z", lt: "2024-02-01T00:00:00Z" }
"""
input DateTimeFilter {
    equals: DateTime
    not: DateTime
    in: [DateTime!]
    notIn: [DateTime!]
    lt: DateTime
    lte: DateTime
    gt: DateTime
    gte: DateTime
    isNull: Boolean
}

"""ID filter"""
input IDFilter {
    equals: ID
    not: ID
    in: [ID!]
    notIn: [ID!]
    isNull: Boolean
}

"""UUID filter"""
input UUIDFilter {
    equals: UUID
    not: UUID
    in: [UUID!]
    notIn: [UUID!]
    isNull: Boolean
}

"""
JSONB filter (PostgreSQL).

Examples:
- { contains: { role: "admin" } }
- { hasKey: "email" }
- { hasKeys: ["name", "email"] }
"""
input JSONFilter {
    equals: JSON
    contains: JSON
    containedBy: JSON
    hasKey: String
    hasKeys: [String!]
    hasAnyKey: [String!]
    isNull: Boolean
}
